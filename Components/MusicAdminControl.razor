<MudPaper Style="margin:2%; padding:1%">
    <MudText Align="Align.Center">Music Settings</MudText>
    <MudCardContent>
        <MudStack>

            <MudButton Color="Color.Primary"
                       Size="Size.Small"
                       OnClick="InitalizeAlbumsFromRoot"
                       StartIcon="@Icons.Material.Filled.Add">
                Initalize Music From wwwroot
            </MudButton>

            <MudButton Color="Color.Primary"
                       Size="Size.Small"
                       OnClick="ClearAlbums"
                       StartIcon="@Icons.Material.Filled.Dangerous">
                Clear All Music
            </MudButton>

        </MudStack>
    </MudCardContent>
</MudPaper>