
<MudCard>
    <MudCardHeader>Music Settings</MudCardHeader>
    <MudCardContent>
        <MudStack>
            <MudItem xs="6">
                <MudPaper Class="d-flex align-center justify-center mud-width-full">
                    <MudStack>
                        <MudText Typo="Typo.h6">Initalize Music From Web Root</MudText>
                        <MudButton Color="Color.Primary"
                                   Size="Size.Small"
                                   OnClick="InitalizeAlbumsFromRoot"
                                   StartIcon="@Icons.Material.Filled.Add"/>

                    </MudStack>
                </MudPaper>
            </MudItem>

            <MudItem xs="6">
                <MudPaper Class="d-flex align-center justify-center mud-width-full">
                    <MudStack>

                        <MudText Typo="Typo.h6">Clear All Albums</MudText>
                        <MudButton Color="Color.Primary"
                                   Size="Size.Small"
                                   OnClick="ClearAlbums"
                                   StartIcon="@Icons.Material.Filled.Dangerous"/>


                    </MudStack>
                </MudPaper>
            </MudItem>

        </MudStack>
    </MudCardContent>
</MudCard>