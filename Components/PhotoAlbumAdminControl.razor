<MudPaper Style="margin:2%; padding:1%">
    <MudText>Photo Settings</MudText>

    <MudCardContent>
        <MudStack>

            <MudButton Color="Color.Primary"
                       Size="Size.Small"
                       OnClick="AddWebRootPhotosToDb"
                       StartIcon="@Icons.Material.Filled.Add">
                Add All Photos From wwwroot
            </MudButton>

            <MudButton Color="Color.Primary"
                       Size="Size.Small"
                       OnClick="SanatizePhotoPaths"
                       StartIcon="@Icons.Material.Filled.Update">
                Sanatize Photo Paths
            </MudButton>

            <MudButton Color="Color.Primary"
                       Size="Size.Small"
                       OnClick="ClearAllAlbums"
                       StartIcon="@Icons.Material.Filled.Dangerous">
                Clear All Photos
            </MudButton>
        </MudStack>
    </MudCardContent>
</MudPaper>