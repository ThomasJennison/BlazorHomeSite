<MudPaper Style="margin:2%; padding:1%">
    <MudCard>
        <MudCardHeader>
            <MudText>
                Site Owner Settings
            </MudText>

            @if (Read)
            {
                <MudButton StartIcon="@Icons.Filled.Edit" OnClick="ToggleEdit" />
            }
            else
            {
                <MudButton StartIcon="@Icons.Filled.Cancel" 
                           OnClick="ToggleEdit" 
                           IconColor="Color.Error"/>
            }
        </MudCardHeader>
        <MudCardContent>

            <MudTextField Label="First name"
                          ReadOnly=@Read
                          @bind-Value="OwnerModel.FirstName" For="@(() => OwnerModel.FirstName)" />

            <MudTextField Label="Last Name"
                          ReadOnly=@Read
                          @bind-Value="OwnerModel.LastName"
                          For="@(() => OwnerModel.LastName)" />

            <MudTextField T="string"
                          Label="Introduction"
                          ReadOnly=@Read
                          Variant="Variant.Outlined"
                          Lines="4"
                          @bind-Value="OwnerModel.Introduction"
                          For="@(() => OwnerModel.Introduction)" />

            <MudTextField Label="About"
                          Lines="5"
                          ReadOnly=@Read
                          @bind-Value="OwnerModel.About"
                          For="@(() => OwnerModel.About)" />

            <MudTextField Label="Location"
                          ReadOnly=@Read
                          @bind-Value="OwnerModel.Location"
                          For="@(() => OwnerModel.Location)" />

            <MudTextField Label="Discord Url"
                          ReadOnly=@Read
                          @bind-Value="OwnerModel.DiscordUrl"
                          For="@(() => OwnerModel.DiscordUrl)" />

            <MudTextField Label="GitHub Url"
                          ReadOnly=@Read
                          @bind-Value="OwnerModel.GitHubUrl"
                          For="@(() => OwnerModel.GitHubUrl)" />

            <MudTextField Label="Linkdin Url"
                          ReadOnly=@Read
                          @bind-Value="OwnerModel.LinkdinUrl"
                          For="@(() => OwnerModel.LinkdinUrl)" />

            @if (!Read)
            {
                <MudButton OnClick="UpdateSiteOwner"
                       Variant="Variant.Filled"
                       EndIcon="@Icons.Filled.Save"
                       Color="Color.Success"
                       Class="ml-auto">
                    Save
                </MudButton>
            }

        </MudCardContent>

    </MudCard>


</MudPaper>