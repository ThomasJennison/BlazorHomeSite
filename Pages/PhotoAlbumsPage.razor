@page "/photoAlbums"

<MudStack>
    
    <MudCarousel Class="mud-width-full" Style="height:500px;" ShowArrows="true" ShowBullets="true" EnableSwipeGesture="true"
                 AutoCycle="true" TData="object">

        @foreach (var album in GetAllAlbums())
        {
            <MudCarouselItem Transition="@Transition.Slide">
                <MudStack>
                    <MudGrid Style="margin-left: 10%; margin-right: 10%">
                        <MudItem xs="7">
                            <MudText Style="width: auto"
                                     Typo="Typo.h6">
                                @album.Description
                            </MudText>
                        </MudItem>
                        <MudItem xs="3">
                            <MudNavLink Href=@GetAlbumRoute(album.Id)
                                        Match="NavLinkMatch.Prefix"
                                        Icon=@Icons.Filled.PhotoAlbum
                                        IconColor="Color.Success">
                                View Album
                            </MudNavLink>
                        </MudItem>
                    </MudGrid>


                    <MudImage ObjectPosition="ObjectPosition.Center"
                              Style="margin-bottom: 10%; margin-left: 10%; margin-right: 10%"
                              ObjectFit="ObjectFit.ScaleDown"
                              Src=@AlbumCovers[album.Id]>
                    </MudImage>

                </MudStack>
            </MudCarouselItem>
        }

    </MudCarousel>
</MudStack>