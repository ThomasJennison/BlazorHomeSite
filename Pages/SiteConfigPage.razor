@page "/SiteConfigPage"

<CascadingAuthenticationState>
    <AuthorizeView Roles="Admin">
        <NotAuthorized>
      
            <MudChip Color="Color.Warning">
                <MudStack Row="true">
                    <MudText Align="Align.Left" Style="margin: 5px">
                        You are not authorized to make changes to this page..
                        how did yah get here 😖? Are yah lost?? go home ->
                    </MudText>
                    <MudNavLink Icon="@Icons.Filled.Home" Href="/" IconColor="Color.Success"/>
                </MudStack> 
            </MudChip>

        </NotAuthorized>
        <Authorized>
            <UsersControl />
            <SiteOwnerEditor />
            <MusicAdminControl />
        </Authorized>
     
    </AuthorizeView>
 
    
</CascadingAuthenticationState>