@page "/musicAlbumsPage"

<MudContainer>
    <MudStack Justify="Justify.Center">



        @foreach (var album in Albums)
        {
            <MudPaper Elevation="5" Style="margin: 3%">
                <MudGrid Justify="Justify.Center">
                    <MudItem xs="12">
                        <MudText Align="Align.Center" Typo="Typo.h6">@album.AlbumName</MudText>
                    </MudItem>

                    <MudItem xl="12">
                        <MudImage Width="200" Height="200" Elevation="20" Src="@album.AlbumCover"> </MudImage>
                    </MudItem>

                    <MudItem xs="12">
                        <MudNavLink Href=@($"/music/album/{album.Id}")>
                            <MudText Align="Align.Center">Listen</MudText>
                        </MudNavLink>
                    </MudItem>

                    <MudItem xs="12">
                        <MudText>@album.Description</MudText>
                    </MudItem>
                    <MudItem xs="6">
                        <MudText Align="Align.Right">Date Recorded: </MudText>
                    </MudItem>
                    <MudItem xs="6">
                        <MudText Align="Align.Left">@album.DateRecorded.ToString("yy-MM-dd")</MudText>
                    </MudItem>

                </MudGrid>
            </MudPaper>
        }
    </MudStack>
</MudContainer>